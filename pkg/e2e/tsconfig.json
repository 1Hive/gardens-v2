{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "node",
      "@playwright/test"
    ]
  },
  "include": [
    "test/**/*",
    "playwright.config.ts",
    "tests/connect.e2e.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}