{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [
    ".env"
  ],
  "pipeline": {
    "generate": {
      "dependsOn": [
        "^generate"
      ],
      "outputs": [
        "src/**"
      ]
    },
    "build": {
      "dependsOn": [
        "^build",
        "web#generate"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "cache/**",
        "out/**",
        "build/**",
        "generated/**"
      ],
      "env": [
        "NEXT_PUBLIC_SUBGRAPH_URL",
        "NEXT_PUBLIC_SUBGRAPH_URL_ETH_SEP",
        "NEXT_PUBLIC_RPC_URL_ARB_TESTNET",
        "NEXT_PUBLIC_RPC_URL_OP_TESTNET",
        "NEXT_PUBLIC_RPC_URL_ETH_TESTNET",
        "PINATA_JWT",
        "NODE_ENV",
        "NEXT_ABLY_API_KEY",
        "NEXT_PUBLIC_ENV_GARDENS",
        "NEXT_PUBLIC_SUBGRAPH_URL_ARB_SEP",
        "NEXT_PUBLIC_SUBGRAPH_URL_OP_SEP",
        "NEXT_RUNTIME",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE",
        "NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "test/**/*.t.sol"
      ],
      "outputs": []
    },
    "test:watch": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "web#generate",
        "^dev"
      ],
      "cache": false
    },
    "foundry#dev": {
      "cache": false
    },
    "foundry#fork": {
      "cache": false
    },
    "web#generate": {
      "cache": false
    },
    "subgraph#build": {
      "dependsOn": [
        "foundry#build"
      ]
    }
  }
}