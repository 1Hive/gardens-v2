{
  "name": "gardens-v2",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "pkg/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "prettier": "latest",
    "turbo": "^1.7.4"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "packageManager": "pnpm@7.16.1"
}