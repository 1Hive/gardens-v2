{
  "name": "gardens-v2",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "pkg/*"
  ],
  "scripts": {
    "build": "turbo run build --cache-dir=.turbo",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:docs": "turbo run build --filter=docs...",
    "postinstall": "pnpm --filter e2e exec playwright install chromium"
  },
